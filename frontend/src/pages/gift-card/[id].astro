---
import Layout from "../../layouts/Layout.astro";
import { Button } from "@/components/ui/button";

const { id } = Astro.params;
// const giftCard = await fetchGiftCardFromMedusa(id);

const giftCard = {
  id: "1",
  name: "Spotify",
  price: 99,
  image: "https://placehold.co/600x400",
};

export function getStaticPaths() {
  return [{ params: { id: "1" } }];
}
---

<Layout title={`${giftCard.name} - Swedish Gift Cards`}>
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">{giftCard.name}</h1>
    <img
      src={giftCard.image || "/placeholder.svg"}
      alt={giftCard.name}
      class="w-full max-w-md mb-4"
    />
    <p class="text-xl mb-4">Price: {giftCard.price} SEK</p>
    <Button asChild>
      <a href={`/checkout/${id}`}>Buy Now</a>
    </Button>
  </main>
</Layout>
